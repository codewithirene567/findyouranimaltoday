<h1>"Create a new Animal and Reason:"</h1>
<%= form_for(@animal) do |f|%>
    <%= f.label :name%>
    <%= f.text_field :name %>
  <div>
  <%= f.submit %>


    <%= f.label :comment%>
    <%= f.text_field :comment%>

 
  <div>
    <label for="reason_animal_id">Select an animal:</label>
    <%= f.collection_select :animal_id, Animal.all, :id, :name, prompt: true%>
  </div><br>
	
  <%= f.submit %>
	<%end%>
