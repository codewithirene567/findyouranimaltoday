<h1>Log in here</h1>
<%= form_tag('/sessions', method: :post) do %>

    <div class="form-group">
      <%= label_tag(:name, "Your name:") %>
      <%= text_field_tag(:name, nil, class: "form-control") %><br><br>
  
    <div class="form-group">
      <%= label_tag(:password, "Your password:") %>
      <%= password_field_tag(:password, nil, class: "form-control") %>
    </div><br>
  
    <div class="actions">
      <%= submit_tag("Sign In") %>
    </div>
  
  <% end %><br>
  <%= link_to "Click here to return to the homepage", "/" %>